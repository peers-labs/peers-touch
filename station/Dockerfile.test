# 测试环境 Dockerfile
FROM golang:1.21-alpine AS builder

# 安装必要工具
RUN apk add --no-cache git make curl

WORKDIR /app

# 复制 go.mod 和 go.sum
COPY app/go.mod app/go.sum ./
RUN go mod download

# 复制源代码
COPY app/ ./
COPY frame/ ./frame/

# 构建应用
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o station ./main.go

# 运行阶段
FROM alpine:latest

RUN apk --no-cache add ca-certificates curl

WORKDIR /root/

# 从构建阶段复制二进制文件
COPY --from=builder /app/station .

# 复制配置文件
COPY app/conf/ ./conf/

# 暴露端口
EXPOSE 18080

# 健康检查
HEALTHCHECK --interval=10s --timeout=5s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:18080/health || exit 1

# 启动服务
CMD ["./station"]
